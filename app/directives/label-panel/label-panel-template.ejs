<div style="position: relative;">
    <a href="#" class="modal-menu__link" ng-click="activeMenu('addLabel', !toggle, $event)">Etykiety</a>
    <div class="menu" ng-click="blockClosingList($event)" ng-class="{active : name === 'addLabel' && toggle === true }">
        <span class="menu-heading">Dodaj Etykiete</span>
        <div>
            <input type="text" class="form-control" ng-model="searchText.name" placeholder="Szukaj etykiet...">
            <ul class="modal-menu-label__list">
                <li class="modal-menu-label__item" ng-repeat="item in board.boardLabels | filter:searchText">
                    <div class="modal-menu-label-wrapper">
                        <a href class="modal-menu-label__link" ng-click="addLabel($parent.$parent.$index, $parent.$index, $index, item)">
                            <span class="label-property" style="background-color: {{item.colour}}; ">{{item.name}}</span>
                        </a>
                        <span class="label-glyphicon glyphicon glyphicon-pencil" ng-click="labelMenu($event, 'editLabel', $index, item);"></span>
                    </div>

                    <div class="menu label-control" ng-click="blockClosingList($event)" ng-class="{active : names === 'editLabel' && toggles.nestedMenu === true && indexEditLabel == $index}">
                        <span class="menu-heading">Zmień Etykietę</span>
                        <div class="label-control-wrapper center-block">
                            <form>
                                <h5>Nazwa</h5>
                                <input type="text" class="form-control" ng-model="insertedName">
                                <h5>Wybierz kolor</h5>
                                <div class="label-create">
                                    <span ng-repeat="item in labels" style="background-color: {{item.colour}}" ng-click="changeLabelColour(item.colour)">
                                        <span class="glyphicon glyphicon-ok" ng-if="selectedColour == item.colour"></span>
                                    </span>
                                </div>
                                <button class="btn btn-success pull-right" ng-click="editLabel(insertedName, $index)">Zapisz</button>
                                <button class="btn btn-danger pull-right" ng-click="deleteLabel(item._id)">Usuń</button>
                            </form>
                        </div>
                    </div> 
                </li>
            </ul>
        </div>



        <div class="label-bottom">
            <a href="#" ng-click="labelMenu($event, 'createLabel');">Utwórz nową etykietę</a>

            <div class="menu label-control" ng-click="blockClosingList($event)" ng-class="{active : names === 'createLabel' && toggles.nestedMenu === true }">
                <span class="menu-heading">Nowa Etykieta</span>
                <div class="label-control-wrapper center-block">
                    <form>
                        <h5>Nazwa</h5>
                        <input type="text" class="form-control" ng-model="insertedName">
                        <h5>Wybierz kolor</h5>
                        <div class="label-create">
                            <span ng-repeat="item in labels" style="background-color: {{item.colour}}" ng-click="changeLabelColour(item.colour)">
                                <span class="glyphicon glyphicon-ok" ng-if="selectedColour == item.colour"></span>
                            </span>
                        </div>
                        <div>
                            <p class="quiet-heading">Jeśli nie wybierzesz koloru domyślnie zostanie ustawiony szary.</p>
                        </div>
                        <button class="btn btn-success pull-right" ng-click="createLabel(insertedName)">Zapisz</button>
                        <button class="btn btn-danger pull-right">Usuń</button>
                    </form>
                </div>
            </div>

        </div>
        <hr style="height: 1px; background-color: #D6DADC; margin: 5px 0 10px 0;">
    </div>
</div>